<div id="map"></div>
<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: -33.110619, lng: -64.299910},
      zoom: 15
    });
  }

  $("#enviar").click(function(){

    var nombre = $("#form-nombre").val();
    var apellido = $("#form-apellido").val();
    var numero = $("#form-numero").val();
    var mensaje = $("#form-mensaje").val();
    var validacion_numero = /^([0-9])*$/;

    if (nombre == "") {

      $("#mensaje1").fadeIn();
      return false;

    }else {

      $("#mensaje1").fadeOut();

        if (apellido == "") {
          $("#mensaje2").fadeIn();
          return  false;
        }else{

          $("#mensaje2").fadeOut();
          if (numero == "" || !validacion_numero.test(numero)) {

            $("#mensaje3").fadeIn();
            return false;

          }else{

            $("#mensaje3").fadeOut();
            if (mensaje == ""){

              $("#mensaje4").fadeIn();
              return false;

            }

          }

        }

    }
  });
</script>

