    var validation_number = /^([0-9])*$/;

    if (name == "") {

      $("#message-error-1").fadeIn();
      return false;

    }else {

      $("#message-error-1").fadeOut();

        if (surname == "") {
          $("#message-error-2").fadeIn();
          return  false;
        }else{

          $("#message-error-2").fadeOut();
          if (number == "" || !validacion_number.test(number)) {

            $("#message-error-3").fadeIn();
            return false;

          }else{

            $("#message-error-3").fadeOut();
            if (message == ""){

              $("#message-error-4").fadeIn();
              return false;

            }

          }

        }

    }
  });
